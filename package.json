{
  "name": "fizbuz-api",
  "version": "0.0.4",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express-jwt": "^5.3.3",
    "jwks-rsa": "^1.8.0",
    "nexus": "0.23.0",
    "nexus-plugin-prisma": "^0.9.0",
    "nexus-plugin-shield": "^0.1.4",
    "yup": "^0.29.1"
  },
  "scripts": {
    "format": "prettier --write './**/*.{ts,md}'",
    "lint": "eslint 'api/**/*.ts' --quiet --fix",
    "dev": "nexus dev",
    "build": "nexus build",
    "seed": "ts-node prisma/seed.ts",
    "db:save": "prisma migrate save --experimental",
    "db:up": "prisma migrate up --experimental",
    "start": "yarn db:save && yarn db:up && node .nexus/build/api"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/yup": "^0.29.2",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5"
  }
}
